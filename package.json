{
  "name": "bank-reconciliation-tdd-starter",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev src/server.ts",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "docker:test": "docker-compose --env-file .env.bank --profile test up --build test",
    "docker:test-unit": "docker-compose --env-file .env.bank --profile test up --build test-unit",
    "docker:test-coverage": "docker-compose --env-file .env.bank --profile test up --build test-coverage",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm migration:generate -- -d src/config/ormconfig.ts",
    "migration:create": "npm run typeorm migration:create",
    "migration:run": "npm run typeorm migration:run -- -d src/config/ormconfig.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d src/config/ormconfig.ts",
    "migration:show": "npm run typeorm migration:show -- -d src/config/ormconfig.ts",
    "schema:sync": "npm run typeorm schema:sync -- -d src/config/ormconfig.ts",
    "schema:drop": "npm run typeorm schema:drop -- -d src/config/ormconfig.ts"
  },
  "dependencies": {
    "csv-parser": "^3.0.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "multer": "^1.4.4",
    "pg": "^8.9.0",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.19"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.4.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
